<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brush_size_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvBrushSizeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a brush size"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnBrushSize5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5" />

    <Button
        android:id="@+id/btnBrushSize10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectBrushSize10"
        android:text="10" />

    <Button
        android:id="@+id/btnBrushSize15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15" />

</LinearLayout>
